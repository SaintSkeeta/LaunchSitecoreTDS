@model LaunchSitecore.Models.PromoItem
<div class="thumbnail grey-box">
 @Html.Sitecore().Field("Image", Model.Item, new { @maxWidth = "400" })
 <div class="caption">
  <h3>@Html.Sitecore().Field("Title", Model.Item)</h3>
  @Html.Sitecore().Field("Text", Model.Item)
  <p><a href="@Model.LinkToUrl" class="btn btn-primary">@Html.Sitecore().Field("Link Text", Model.Item)</a></p>
 </div>
</div>